@model StoreApp.Data.Concrete.Order
@using StoreApp.Data.Concrete
@using StoreApp.Data.Helpers
@{
    ViewData["Title"] = "Sipariş Durumu Güncelle";
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">Sipariş Durumu Güncelle</h2>

    <form asp-action="UpdateStatus" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Mevcut Durum:</label>
            <span class="badge rounded-pill @Model.Status.GetOrderStatusBadgeClass()">
                @Model.Status.GetDisplayName()
            </span>
        </div>

        <div class="mb-3">
            <label class="form-label">Yeni Durum</label>
            <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-select" required></select>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            <button type="submit" class="btn btn-success">Güncelle</button>
        </div>
    </form>
</div>
