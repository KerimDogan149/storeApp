@model StoreApp.Data.Concrete.Category

<div class="container mt-4">
    <h2 class="text-primary mb-4">Yeni Kategori Ekle</h2>

    <form asp-action="Create" method="post" class="border p-4 rounded shadow-sm bg-white">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" id="nameInput" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Url" class="form-label"></label>
            <input asp-for="Url" class="form-control bg-light" id="urlInput" readonly />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </div>

    </form>
</div>

@section Scripts {
    <script>
        function toUrlSlug(text) {
            return text.toLowerCase()
                .replace(/ç/g, "c").replace(/ğ/g, "g")
                .replace(/ı/g, "i").replace(/ö/g, "o")
                .replace(/ş/g, "s").replace(/ü/g, "u")
                .replace(/&/g, "and")
                .replace(/'/g, "")
                .replace(/"/g, "")
                .replace(/\./g, "")
                .replace(/,/g, "")
                .replace(/ /g, "-")
                .replace(/--/g, "-")
                .replace(/^-+|-+$/g, "");
        }

        document.getElementById("nameInput").addEventListener("input", function () {
            const slug = toUrlSlug(this.value);
            document.getElementById("urlInput").value = slug;
        });
    </script>
}
