@model IEnumerable<StoreApp.Data.Entities.Campaign>

@{
    ViewData["Title"] = "Kampanya Listesi";
    var currentStatus = Context.Request.Query["status"].ToString();
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Kampanya Listesi</h2>

    <div class="row mb-3 align-items-center">
        <div class="col-md-9">
        <form method="get" class="row row-cols-lg-auto g-2 align-items-center">
            <div class="col-12">
                <select name="status" class="form-select">
                    <option value="">Tüm Durumlar</option>
                    <option value="active" selected="@(currentStatus == "active")">Aktif</option>
                    <option value="inactive" selected="@(currentStatus == "inactive")">Pasif</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-outline-primary">Filtrele</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-1">Temizle</a>
            </div>
        </form>
        </div>
        <div class="col-md-3 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Kampanya
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz kampanya eklenmemiş.</div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Görsel</th>
                    <th>Başlık</th>
                    <th>Alt Başlık</th>
                    <th>Aktif</th>
                    <th>Link</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td style="width:150px;">
                            <img src="~/img/campain/@c.Image" alt="Kampanya" class="img-fluid rounded" />
                        </td>
                        <td>@c.Title</td>
                        <td>@c.SubTitle</td>
                        <td>
                            @if (c.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(c.Link))
                            {
                                <a href="@c.Link" target="_blank">@c.Link</a>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary">Düzenle</a>
                                <form asp-action="Delete" asp-route-id="@c.Id" method="post" onsubmit="return confirm('Bu kampanyayı silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Sil
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
