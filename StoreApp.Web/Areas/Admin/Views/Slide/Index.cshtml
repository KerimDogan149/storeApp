@model IEnumerable<StoreApp.Data.Entities.Slide>

@{
    ViewData["Title"] = "Slide Listesi";
    var currentStatus = Context.Request.Query["status"].ToString();
    var currentOrder = Context.Request.Query["order"].ToString();
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Slide Listesi</h2>

    <div class="row mb-3 align-items-center">
        <div class="col-md-9">
        <form method="get" class="row row-cols-lg-auto g-2 align-items-center">
            <div class="col-12">
                <select name="status" class="form-select">
                    <option value="">Tüm Durumlar</option>
                    <option value="active" selected="@(currentStatus == "active")">Aktif</option>
                    <option value="inactive" selected="@(currentStatus == "inactive")">Pasif</option>
                </select>
            </div>
            <div class="col-12">
                <input type="number" name="order" class="form-control" placeholder="Sıra No"
                    value="@currentOrder" />
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-outline-primary">Filtrele</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-1">Temizle</a>
            </div>
        </form>
        </div>
        <div class="col-md-3 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Slayt
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz slide eklenmemiş.</div>
    }
    else
    {
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Görsel</th>
                    <th>Başlık</th>
                    <th>Link</th>
                    <th>Aktif</th>
                    <th>Sıralama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var slide in Model)
                {
                    <tr>
                        <td style="width:150px;">
                            <img src="~/img/slides/@slide.ImageUrl" alt="Slide" class="img-fluid rounded" />
                        </td>
                        <td>@slide.Title</td>
                        <td>
                            @if (!string.IsNullOrEmpty(slide.Link))
                            {
                                <a href="@slide.Link" target="_blank">@slide.Link</a>
                            }
                        </td>
                        <td>
                            @if (slide.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td>@slide.Order</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@slide.Id" class="btn btn-sm btn-primary">Düzenle</a>
                                <form asp-action="Delete" asp-route-id="@slide.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('Bu slaytı silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

