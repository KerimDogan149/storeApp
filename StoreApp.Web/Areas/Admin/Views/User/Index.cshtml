@model IEnumerable<StoreApp.Data.Entities.AppUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2 class="fw-bold text-primary mb-4">Kullanıcı Listesi</h2>

<form method="get" class="d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex gap-2">
        <input type="text" name="username" value="@Context.Request.Query["username"]" class="form-control"
            placeholder="Kullanıcı Adı">
        <input type="text" name="email" value="@Context.Request.Query["email"]" class="form-control"
            placeholder="Email">
        <button type="submit" class="btn btn-outline-primary">Filtrele</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Temizle</a>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Yeni Kullanıcı
    </a>
</form>

<table class="table table-bordered table-hover shadow-sm align-middle">
    <thead class="table-light text-center">
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Durum</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @if (user.EmailConfirmed)
                    {
                        <span class="badge bg-success">Email Doğrulandı</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Email Doğrulanmamış</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary me-2">
                        <i class="bi bi-pencil"></i> Düzenle
                    </a>

                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline"
                        onsubmit="return confirm('Bu kullanıcı silinsin mi?');">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
