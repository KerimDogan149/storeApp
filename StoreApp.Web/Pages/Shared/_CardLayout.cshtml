<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />



    <title>StoreApp</title>
</head>

<body>
    <header class="bg-white border-bottom shadow-sm py-3">
        <div class="container d-flex align-items-center justify-content-between">
            <a href="/products" class="text-dark text-decoration-none d-flex align-items-center">
                <i class="bi bi-basket fs-4 me-2 text-primary"></i>
                <span class="fw-bold fs-4">StoreApp</span>
            </a>
        </div>
    </header>

    <div class="container my-3">

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
        @RenderBody()
    </div>

    <footer class="bg-body-tertiary text-dark py-5 mt-5 border-top">
        <div class="container">
            @await Component.InvokeAsync("SiteSocial")
        </div>
    </footer>


    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>