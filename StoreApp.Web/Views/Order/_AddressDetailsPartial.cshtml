@model StoreApp.Data.Entities.Address

<div class="border rounded p-3 bg-light shadow-sm">
    <div class="fw-bold fs-5 text-primary mb-1">
        <i class="bi bi-geo-alt-fill me-1"></i> @Model.Title
    </div>

    <div class="mb-1">
        <strong>Ad Soyad:</strong> @Model.FullName
    </div>

    <div class="mb-1">
        <strong>Telefon:</strong> @Model.PhoneNumber
    </div>

    <div class="mb-1">
        <strong>Konum:</strong> @Model.Province / @Model.District / @Model.Neighborhood
    </div>

    <div>
        <strong>Adres:</strong>
        <div class="text-muted">@Model.FullAddress</div>
    </div>
</div>
