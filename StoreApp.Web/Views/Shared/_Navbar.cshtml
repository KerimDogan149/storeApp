@using Microsoft.AspNetCore.Identity
@using StoreApp.Data.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<nav class="navbar navbar-expand-lg bg-white shadow-sm border-bottom py-3">
    <div class="container d-flex align-items-center">

        <!-- LOGO -->
        <a class="navbar-brand d-flex align-items-center me-4" href="/">
            <i class="bi bi-basket text-primary fs-3 me-2"></i>
            <span class="fw-bold fs-4 text-primary">StoreApp</span>
        </a>

        <!-- TOGGLER -->
        <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- MENÜLER -->
        <div class="collapse navbar-collapse justify-content-between" id="navbarMain">
            <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-3">
                <!-- Tüm Kategoriler -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle fw-semibold text-dark" href="#" id="tumKategorilerDropdown" role="button"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-grid me-1"></i> Tüm Kategoriler
                    </a>
                    <ul class="dropdown-menu shadow" aria-labelledby="tumKategorilerDropdown">
                        @await Component.InvokeAsync("NavbarAllCategories")
                    </ul>
                </li>

                <!-- Öne çıkanlar -->
                <vc:navbar-top-categories></vc:navbar-top-categories>
            </ul>

            <!-- Sağ alan -->
            <ul class="navbar-nav d-flex align-items-center gap-3">
                <!-- Arama -->
                <li class="nav-item">
                    <form method="get" asp-controller="Home" asp-action="Search" class="d-flex">
                        <input class="form-control form-control-sm me-2 rounded-pill" type="search" name="q" placeholder="Ürün ara..." aria-label="Search">
                        <button class="btn btn-outline-dark btn-sm rounded-pill" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </li>

                <!-- Sepet -->
                <li class="nav-item">
                    <vc:cart-summary></vc:cart-summary>
                </li>

                <!-- Kullanıcı -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle btn btn-sm btn-outline-white rounded-pill px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i> Hesabım
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="AccountInfo">
                                    <i class="bi bi-person-lines-fill me-2"></i> Kullanıcı Bilgilerim
                                </a>
                            </li>

                                 <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                    <i class="bi bi-key-fill me-1"></i> Şifremi Değiştir
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Orders">
                                    <i class="bi bi-bag-check-fill me-2"></i> Siparişlerim
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Addresses">
                                    <i class="bi bi-geo-alt-fill me-2"></i> Adreslerim
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }

                else
                {
                    <li class="nav-item">
                        <a class="btn btn-outline-primary btn-sm rounded-pill me-2" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-secondary btn-sm rounded-pill" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
