@model List<StoreApp.Data.Concrete.Category>

<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasCategories"
    aria-labelledby="offcanvasCategoriesLabel">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title d-flex align-items-center gap-2" id="offcanvasCategoriesLabel">
            <i class="bi bi-list"></i> TÃ¼m Kategoriler
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Kapat"></button>
    </div>

    <div class="offcanvas-body px-0">
        <ul class="list-group list-group-flush">
            @foreach (var category in Model)
            {
                <li class="list-group-item px-3 py-2">
                    <a href="/category/@category.Url"
                        class="d-flex justify-content-between align-items-center text-decoration-none text-dark">
                        <span>@category.Name</span>
                        <i class="bi bi-chevron-right small text-muted"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
